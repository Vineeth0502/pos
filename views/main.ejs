<!-- views/main.ejs -->
<% console.log('Rendering main.ejs'); %>

<script src="https://cdn.tailwindcss.com"></script>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="grid grid-cols-3 gap-6">
      <% mattresses.forEach((mattress) => { %>
        <div class="space-y-4">
          <div class="relative">
            <img
              src="duroflex.png"
              alt="<%= mattress.name %>"
              class="w-full h-auto"
              width="320"
              height="240"
              style="aspect-ratio:320/240;object-fit:cover"
            />
            <button class="absolute top-2 right-2 p-2 bg-white rounded-full shadow-md">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="text-red-500"
              >
                <path d="M19 14c1.49-1.46 3-3.21 3-5.5A5.5 5.5 0 0 0 16.5 3c-1.76 0-3 .5-4.5 2-1.5-1.5-2.74-2-4.5-2A5.5 5.5 0 0 0 2 8.5c0 2.3 1.5 4.05 3 5.5l7 7Z"></path>
              </svg>
            </button>
            <a href="/<%= mattress.mattress_id %>">   <button class="absolute bottom-2 left-2 p-2 bg-white rounded-md shadow-md">
              Quick View
            </button></a>
          </div>
          <div>
            <h3 class="text-lg font-semibold"><%= mattress.name %></h3>
            <div class="flex items-baseline space-x-2">
              <p class="text-xl font-bold">₹ <%= mattress.price %></p>
              <p class="text-sm line-through">₹ <%= mattress.originalPrice %></p>
              <span class="bg-red-100 text-red-800 text-xs font-semibold px-2.5 py-0.5 rounded">
                7% off
              </span>
            </div>
            <a href="/<%= mattress.mattress_id %>">  <button class="text-indigo-600 hover:text-indigo-500" >
                Quick View
              
            </button></a>
          </div>
        </div>
      <% }); %>
    </div>
  </div>
  